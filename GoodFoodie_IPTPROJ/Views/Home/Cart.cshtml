@model List<ProductModel> 

@{
    ViewData["Title"] = "Cart Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../pictures/bg.png');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
        }

        .cart-box {
            width: 400px;
            
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto; /* Add this line to enable vertical scrolling */
            max-height: 600px; /* Set a maximum height for the box */
        }

        .item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

            .item img {
                max-width: 400px;
                max-height: 100px;
                margin-right: 10px;
            }

        .quantity {
            display: flex;
            align-items: center;
        }

            .quantity button {
                background-color: black;
                color: #fff;
                border: none;
                border-radius: 5px;
                padding: 5px 10px;
                cursor: pointer;
                margin: 0 5px;
            }

        .subtotal {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            font-weight: bold;
        }

        .checkout-btn {
            width: 100%;
            padding: 10px;
            background-color: maroon;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

          .personal-details-box {
            width: 400px;
            margin-top: -545px;
            margin-left: 500px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding-left: -100px;
        }

        .personal-details-box h2 {
            text-align: center;
            color: #333;
        }

        .personal-details-box form {
            display: flex;
            flex-direction: column;
        }

        .personal-details-box label {
            margin-top: 10px;
            font-weight: bold;
        }

        .personal-details-box input,
        .personal-details-box select {
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        .personal-details-box button {
            padding: 10px;
            background-color: black;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        h2 {
            font-family:'Times New Roman';
            text-align: center;
        }

    </style>
</head>
<body>

    <div class="cart-box">
        <h2>Shooping Cart</h2>
        @foreach (var product in Model)
        {
            <div class="item">
                <img src="@product.ImageUrl" alt="Product Image">
                <div>
                    <p>@product.ProductName</p>
                    <div class="quantity">
                        <button onclick="decrementQuantity('@product.ProductId')">-</button>
                        <span id="quantity@product.ProductId">@product.Quantity</span>
                        <button onclick="incrementQuantity('@product.ProductId')">+</button>
                    </div>
                    <p>Price: $@product.Price</p>
                </div>
            </div>
        }

        <div class="subtotal">
            <p>Subtotal:</p>
            <p id="subtotal">$@Model.Sum(p => p.Quantity * p.Price)</p>
        </div>
    </div>




    
<!-- New box for personal details -->
<div class="personal-details-box">
    <h2>Personal Details</h2>
    <form id="personal-details-form">
        <label for="fullname">Full Name:</label>
        <input type="text" id="fullname" name="fullname" required>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>

        <label for="gender">Gender:</label>
        <select id="gender" name="gender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <!-- Add more options as needed -->
        </select>

        <label for="contact-number">Contact Number:</label>
        <input type="tel" id="contact-number" name="contact-number" required>

        <label for="birthdate">Birthdate:</label>
        <input type="date" id="birthdate" name="birthdate" required>

        <button type="submit" class="btn">Check Out</button>
    </form>
</div>

<script>
