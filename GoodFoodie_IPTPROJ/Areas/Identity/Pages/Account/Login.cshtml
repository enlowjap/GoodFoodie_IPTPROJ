@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: red; /* Background color similar to YouTube */
        margin:0;
        padding:0;
    }

    h1 {
        text-align: center;
        color: black; /* Red color similar to YouTube's logo */
        width:165px;
        margin:0;
        margin-left: 34px;
    }
    p{
        width:500px;
        margin-top:10px;

    }

    .login-container {
        margin-top: 50px;
    }

    .login-card {
        background-color: #ffffff; /* White background */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Box shadow for a card-like appearance */
    }

    .login-link {
        color: black; /* Blue color for links */
    }

    .tocontain{
        margin:0;
        padding:10px;
        background-color:white;
        width:800px;
    }
    .row{
        display:flex;
        justify-content:center;
        margin-left: 33px;
    }
    form{
        width:650px;
        margin:0;
    }
    .lgnbttn{
        background-color:black;
        color:white;
    }
    .lgnbttn:hover{
        color:white;
        background-color:maroon;
    }
    .logogl{
        margin-right:10px;
        width: 20px; 
        height: 20px; 
        border-radius: 50%; 
    }

    .lgnggl {
        color:black;
        background-color:wheat;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        width:650px;
    }
    .lgnggl:hover{
            color: white;
            background-color: maroon;
    }
    .plinks p a{
        color:black;
    }
    .plinks p a:hover{
        color:maroon;
    }

    .checked-label {
        color: black;
    }

    .checkbox .form-check-input {
        outline: none
    }

    .checkbox .form-check-input:checked {
        border: 1px solid black; /* Change the border color when checked (replace with desired color) */
        background-color: #000; /* Change the background color when checked (replace with desired color) */
        color: #fff;
            outline: none !important;
    }
        /* Styles for the focused state */
        .checkbox .form-check-input:focus {
            outline: none !important; /* Remove the outline for the focused state */
        }

        /* Styles for the active state */
        .checkbox .form-check-input:active {
            outline: none !important; /* Remove the outline for the active state */
        }
    </style>

<div class="tocontain">
<h1>Welcome!</h1>
<div class="row">
    <div class="col">

        <section>
            <form id="account" method="post">
                <p>It's a pleasure to meet you. We are excited that you're here so let's get started!'</p>
         
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username"  placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"  placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                        
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg lgnbttn">Log in</button>
                </div>
                <div>


                        <hr />
                        @{
                            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-lg lgnggl" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" onclick="setRequired()">
                                                    <img src="/../pictures/icons8-google-48.png" class="logogl" /> Log in with @provider.DisplayName
                                                </button>
                                            }
                                        </p>
                                    </div>
                                </form>

                                
                            }
                        }

                </div>
                <div class="plinks">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>

    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
